@using Microsoft.AspNetCore.Authentication
@using NbSites.Web.Demo.Cookies
@{
}
<h2>HttpContext.User.Claims</h2>
<h2>IsAuthenticated: @User.Identity.IsAuthenticated</h2>
<dl>
    @foreach (var claim in User.Claims)
    {
        <dt>@claim.Type</dt>
        <dd>@claim.Value</dd>
    }
</dl>

<h2>AuthenticationProperties</h2>
<dl>
    @{
        var authenticateResult = await Context.AuthenticateAsync(MyCookie.CookieScheme);
        var authenticateResultProperties = authenticateResult?.Properties;
        if (authenticateResultProperties != null)
        {
            foreach (var prop in authenticateResultProperties.Items)
            {
                <dt>@prop.Key</dt>
                <dd>@prop.Value</dd>
            }
        }
    }
</dl>